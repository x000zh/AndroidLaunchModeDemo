<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:overScrollMode="ifContentScrolls">

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/launchStandard"
        android:text="Launch Standard"
        app:layout_constraintTop_toBottomOf="@id/message"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="100dp" />

    <Button
        android:id="@+id/launchSingleTop"
        android:text="Launch SingleTop"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/launchStandard"
        android:layout_width="match_parent"
        android:layout_height="100dp" />
    <Button
        android:id="@+id/launchSingleTask"
        android:text="Launch SingleTask"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/launchSingleTop"
        android:layout_width="match_parent"
        android:layout_height="100dp" />
    <Button
        android:id="@+id/launchSingleInstance"
        android:text="Launch SingleInstance"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/launchSingleTask"
        android:layout_width="match_parent"
        android:layout_height="100dp" />

    <Button
        android:id="@+id/launchIntentFLAG_ACTIVITY_CLEAR_TOP"
        android:text="Launch FLAG_ACTIVITY_CLEAR_TOP"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/launchSingleInstance"
        android:layout_width="match_parent"
        android:layout_height="100dp" />

    <Button
        android:id="@+id/launchIntentFLAG_ACTIVITY_BROUGHT_TO_FRONT"
        android:text="Launch FLAG_ACTIVITY_BROUGHT_TO_FRONT"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/launchIntentFLAG_ACTIVITY_CLEAR_TOP"
        android:layout_width="match_parent"
        android:layout_height="100dp" />

    <Button
        android:id="@+id/launchIntentFLAG_ACTIVITY_SINGLE_TOP"
        android:text="Launch FLAG_ACTIVITY_SINGLE_TOP"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/launchIntentFLAG_ACTIVITY_BROUGHT_TO_FRONT"
        android:layout_width="match_parent"
        android:layout_height="100dp" />

    <Button
        android:id="@+id/launchIntentFLAG_ACTIVITY_EXCLUDE_FROM_RECENTS"
        android:text="Launch FLAG_ACTIVITY_EXCLUDE_FROM_RECENTS"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/launchIntentFLAG_ACTIVITY_SINGLE_TOP"
        android:layout_width="match_parent"
        android:layout_height="100dp" />

</android.support.constraint.ConstraintLayout>
</ScrollView>